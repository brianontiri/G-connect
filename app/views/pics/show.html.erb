<div id="pic_show">
  <div class="row col-md-6 col-md-offset-3">
    <div class="panel panel-default">
          <div class="panel heading pic_image">
<%= image_tag @pic.image.url(:medium) %>
</div>
    <div class="panel-body">
<h1> <%=@pic.title%></h1>
<p> <%=@pic.description%></p>
</div>
    <div class=" panel-footer">
          <div class="row">
                <div class="col-md-6">
                <p>Pic by <%=@pic.user.email%></p><br>
                </div>
                <div class=" col-md-6">
                      <div class="btn-group pull-right">
                        <% if user_signed_in?%>
                        <%= link_to like_pic_path(@pic), method: :put, class:"btn btn-default" do %>
                        <span class="glyphicon glyphicon-thumbs-up"></span>
                        <%=@pic.get_upvotes.size%>

                        <%  end %>
<% if current_user.id == @pic.user_id %>
<%= link_to 'Edit', edit_pic_path, class:"btn btn-info" %>
<%= link_to 'Delete', pic_path,class:"btn btn-danger", method: :delete, data: {confirm: "are you sure"} %>
<% end %>
<% end %>
</div>
</div>
</div>
</div>
</div>
</div>
